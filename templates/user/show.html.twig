{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<h1>Utilisateur</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>

        <tr>
            <th>Nom</th>
            <td>{{ user.nom }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ user.prenom }}</td>
        </tr>
        <tr>
            <th>Datedenaissance</th>
            <td>{{ user.datedenaissance ? user.datedenaissance|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Adresse</th>
            <td>{{ user.adresse }}</td>
        </tr>
        <tr>
            <th>Avatar</th>
            <td>{{ user.avatar }}</td>
        </tr>
    </tbody>
</table>

